<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".detail.TvShowsDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_tvshow"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="215dp"
        android:contentDescription="@string/poster_tvshows"
        android:scaleType="fitXY"
        android:src="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <TextView
        android:id="@+id/tv_tittle_tvshow"
        android:layout_width="377dp"
        android:layout_height="20dp"
        android:text="@string/tittle_tvshows"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/img_tvshow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="76dp"
            android:layout_height="25dp"
            android:text="@string/score_form_tvshows"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_tvshow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toEndOf="@+id/img_tvshow"
            app:layout_constraintTop_toTopOf="@+id/img_tvshow"
            app:layout_constraintVertical_bias="0.025" />

        <TextView
            android:id="@+id/tv_score_tvshow"
            android:layout_width="175dp"
            android:layout_height="26dp"
            android:fontFamily="monospace"
            android:text="@string/score_tvshows"
            android:textColor="@color/greenku"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/img_tvshow"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_form_tvshows"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_tvshow"
            app:layout_constraintEnd_toEndOf="@+id/tv_score_tvshow"
            app:layout_constraintHorizontal_bias="0.022"
            app:layout_constraintStart_toStartOf="@+id/tv_score_tvshow"
            app:layout_constraintTop_toBottomOf="@+id/tv_score_tvshow"
            app:layout_constraintVertical_bias="0.131" />

    <TextView
        android:id="@+id/tv_status_tvshow"
        android:layout_width="182dp"
        android:layout_height="23dp"
        android:text="@string/status_tvshows"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_tvshow"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relase_form_tvshows"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_tvshow"
            app:layout_constraintEnd_toEndOf="@+id/tv_status_tvshow"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_status_tvshow"
            app:layout_constraintTop_toBottomOf="@+id/tv_status_tvshow"
            app:layout_constraintVertical_bias="0.145" />


    <TextView
        android:id="@+id/tv_relase_tvshow"
        android:layout_width="186dp"
        android:layout_height="26dp"
        android:text="@string/relase_tvshows"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/img_tvshow"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lenguage_form_tvshows"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_tvshow"
            app:layout_constraintEnd_toEndOf="@+id/tv_relase_tvshow"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintStart_toStartOf="@+id/tv_relase_tvshow"
            app:layout_constraintTop_toBottomOf="@+id/tv_relase_tvshow"
            app:layout_constraintVertical_bias="0.235" />

    <TextView
        android:id="@+id/tv_lenguage_tvshow"
        android:layout_width="182dp"
        android:layout_height="28dp"
        android:text="@string/lengueage_tvshows"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_tvshow"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="382dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:text="@string/genre_form_tvshows"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_tvshow"
            app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/tv_genre_tvshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/genre_tvshows"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/grey"
            android:text="@string/overview_form_tvshows"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_genre_tvshow" />

    <TextView
        android:id="@+id/tv_description_tvshow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/description_tvshows"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>