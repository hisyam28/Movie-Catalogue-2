<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_films"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_score_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/img_films"
        android:fontFamily="monospace"
        android:text="@string/score_films"
        android:textColor="@color/greenku"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_tittle_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/tv_score_films"
        android:text="@string/tittle_films"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_relase_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_films"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/img_films"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/relase_films"
        android:textSize="10sp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/tv_description_films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_relase_films"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_films"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/description_films" />


</RelativeLayout>